{
  "metadata": {
    "description": "Regex generation challenges with positive and negative examples",
    "note": "Generate a regex that matches ALL positive examples and NONE of the negative examples"
  },
  "challenges": [
    {
      "challenge_id": "REGEX-001",
      "name": "US Phone Numbers",
      "difficulty": "easy",
      "positive_examples": [
        "555-123-4567",
        "123-456-7890",
        "999-000-1234",
        "800-555-0199",
        "212-867-5309"
      ],
      "negative_examples": [
        "55-123-4567",
        "5555-123-4567",
        "555-12-4567",
        "555-123-456",
        "555.123.4567",
        "5551234567"
      ],
      "hint": "Standard US phone format with dashes"
    },
    {
      "challenge_id": "REGEX-002",
      "name": "Email Local Part",
      "difficulty": "medium",
      "positive_examples": [
        "john.doe",
        "jane_smith",
        "user123",
        "test.user.name",
        "a",
        "user_name_123"
      ],
      "negative_examples": [
        ".john",
        "john.",
        "john..doe",
        "john doe",
        "",
        "user@name",
        "_username",
        "username_"
      ],
      "hint": "Letters, numbers, dots and underscores. Cannot start/end with dot or underscore, no consecutive dots"
    },
    {
      "challenge_id": "REGEX-003",
      "name": "Semantic Version",
      "difficulty": "medium",
      "positive_examples": [
        "1.0.0",
        "2.1.3",
        "0.0.1",
        "10.20.30",
        "1.2.3",
        "100.200.300"
      ],
      "negative_examples": [
        "1.0",
        "1",
        "1.0.0.0",
        "v1.0.0",
        "1.0.0-beta",
        "01.0.0",
        "1.02.0",
        "1.0.00"
      ],
      "hint": "Three numeric components, no leading zeros except single 0"
    },
    {
      "challenge_id": "REGEX-004",
      "name": "Hex Color Code",
      "difficulty": "easy",
      "positive_examples": [
        "#FF0000",
        "#00ff00",
        "#0000FF",
        "#AbCdEf",
        "#123456",
        "#FFFFFF"
      ],
      "negative_examples": [
        "FF0000",
        "#FF000",
        "#FF00000",
        "#GGGGGG",
        "#ff00gg",
        "# FF0000",
        "#FF 000"
      ],
      "hint": "Hash followed by exactly 6 hex digits"
    },
    {
      "challenge_id": "REGEX-005",
      "name": "IPv4 Address",
      "difficulty": "hard",
      "positive_examples": [
        "192.168.1.1",
        "10.0.0.1",
        "255.255.255.255",
        "0.0.0.0",
        "172.16.0.1",
        "1.2.3.4"
      ],
      "negative_examples": [
        "256.1.1.1",
        "192.168.1",
        "192.168.1.1.1",
        "192.168.01.1",
        "192.168.1.1.",
        ".192.168.1.1",
        "192.168.1.256",
        "1234.1.1.1"
      ],
      "hint": "Four octets 0-255, no leading zeros except single 0"
    },
    {
      "challenge_id": "REGEX-006",
      "name": "Strong Password",
      "difficulty": "hard",
      "positive_examples": [
        "Abc123!@",
        "P@ssw0rd",
        "MyS3cur3!",
        "Test#1234",
        "Aa1!aaaa"
      ],
      "negative_examples": [
        "password",
        "PASSWORD1!",
        "Password1",
        "Pass!@#$",
        "Aa1!",
        "abcdefgh1!",
        "ABCDEFGH1!",
        "Abcdefgh!"
      ],
      "hint": "Min 8 chars, at least: 1 uppercase, 1 lowercase, 1 digit, 1 special char"
    },
    {
      "challenge_id": "REGEX-007",
      "name": "Date YYYY-MM-DD",
      "difficulty": "medium",
      "positive_examples": [
        "2024-01-15",
        "1999-12-31",
        "2000-06-01",
        "2025-02-28",
        "1985-11-22"
      ],
      "negative_examples": [
        "24-01-15",
        "2024-1-15",
        "2024-01-5",
        "2024/01/15",
        "01-15-2024",
        "2024-13-01",
        "2024-00-15",
        "2024-01-32"
      ],
      "hint": "ISO date format with valid month (01-12) and day (01-31)"
    },
    {
      "challenge_id": "REGEX-008",
      "name": "Variable Name",
      "difficulty": "easy",
      "positive_examples": [
        "myVariable",
        "_privateVar",
        "count",
        "MAX_VALUE",
        "_",
        "a1b2c3",
        "__init__"
      ],
      "negative_examples": [
        "1variable",
        "my-variable",
        "my variable",
        "class",
        "",
        "my.variable",
        "123"
      ],
      "hint": "Starts with letter or underscore, contains only alphanumeric and underscore"
    },
    {
      "challenge_id": "REGEX-009",
      "name": "Credit Card (Masked)",
      "difficulty": "medium",
      "positive_examples": [
        "****-****-****-1234",
        "****-****-****-0000",
        "****-****-****-9999",
        "****-****-****-5678"
      ],
      "negative_examples": [
        "1234-****-****-1234",
        "****-****-****-123",
        "****-****-****-12345",
        "****-****-****-XXXX",
        "****-****-1234",
        "**** **** **** 1234"
      ],
      "hint": "First three groups masked with asterisks, last 4 digits visible"
    },
    {
      "challenge_id": "REGEX-010",
      "name": "Time 24-hour Format",
      "difficulty": "hard",
      "positive_examples": [
        "00:00",
        "12:30",
        "23:59",
        "09:45",
        "15:00",
        "20:15"
      ],
      "negative_examples": [
        "24:00",
        "12:60",
        "9:45",
        "12:5",
        "12:30:00",
        "12-30",
        "25:00",
        "12:30 PM"
      ],
      "hint": "Valid hours 00-23, valid minutes 00-59, colon separator"
    }
  ]
}
