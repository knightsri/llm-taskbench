# OpenRouter API Key (Required)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_key_here

# Optional: Direct API keys for specific providers
# Anthropic API Key (optional, for direct API access)
ANTHROPIC_API_KEY=your_key_here

# OpenAI API Key (optional, for direct API access)
OPENAI_API_KEY=your_key_here

# Optional: Configuration
# Default judge/model fallback
GENERAL_TASK_LLM=anthropic/claude-sonnet-4.5

# Concurrency and billing
TASKBENCH_MAX_CONCURRENCY=5
TASKBENCH_USE_GENERATION_LOOKUP=true

# Model output settings
TASKBENCH_MAX_TOKENS=4000
TASKBENCH_TEMPERATURE=0.7

# Chunking settings (for long inputs)
TASKBENCH_CHUNK_CHARS=20000
TASKBENCH_CHUNK_OVERLAP=500

# API settings
TASKBENCH_TIMEOUT=120.0
TASKBENCH_RATE_LIMIT=60
TASKBENCH_RETRY_MAX_DELAY=60.0

# Judge settings
TASKBENCH_JUDGE_MAX_TOKENS=2000
TASKBENCH_INPUT_PREVIEW_LEN=5000

# Model selection settings
# Cache TTL for OpenRouter models catalog (in hours, default: 24)
TASKBENCH_MODELS_CACHE_TTL=24
# LLM used for model selection analysis (default: openai/gpt-4o)
MODEL_SELECTOR_LLM=openai/gpt-4o

# Enable debug logging
DEBUG=false
